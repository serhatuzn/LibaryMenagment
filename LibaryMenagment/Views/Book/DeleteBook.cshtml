@model Book

@{
    ViewBag.Title = "Silme Onayı";
}

<h1>Silme Onayı</h1>
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.BookId" />
    <p>@Model.Title adlı kitabı silmek istediğinize emin misiniz?</p>
    <button class="btn btn-primary">Evet Sil</button>
    <a class="btn btn-secondary" asp-action="Index">Vazgeç</a>
</form>
