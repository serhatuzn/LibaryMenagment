@model List<Author>

@{
    ViewData["Title"] = "Book List";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author List</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <a class="btn btn-custom" asp-controller="Author" asp-action="NewAuthor">Yazar Ekle</a>
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Author author in Model)
        {
            <tr>
                <td>@author.AuthorId</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td> 
                <td>@author.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("DetailsAuthor", "Author", new { id = author.AuthorId })" class="btn btn-info" asp-for-id="@author.AuthorId" >Details</a>
                    <a href="@Url.Action("EditAuthor", "Author", new { id = author.AuthorId})" class="btn btn-warning" asp-for-id="@author.AuthorId">Edit</a>
                    <a href="@Url.Action("DeleteAuthor", "Author", new { id = author.AuthorId })" class="btn btn-danger" asp-for-id="@author.AuthorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>